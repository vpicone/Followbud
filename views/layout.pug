doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link#bulma(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.4.2/css/bulma.min.css')
		link(rel="icon", type="image/ico", href="/images/favicon.ico")
	body
		block header
		-const location = currentPath.includes('tools') ? 'tools' : 'home'
			.container.section
				nav#top.nav.section
					.container
						.nav-left
							a.nav-item(href='../index.html')
								//-img(src='/images/logo.png', alt='logo')
						span.nav-toggle
							span
							span
							span
						.nav-right.nav-menu
							if (location == 'tools')
								a.nav-item.is-tab(href='/homepage')
									| Home
								a.nav-item.is-tab(href='/tools').is-active
									| Tools
							else
								a.nav-item.is-tab(href='/homepage').is-active
									| Home
								a.nav-item.is-tab(href='/tools')
									| Tools
							// span.nav-item
							// 	a.button.is-danger
							// 		| Log out
				.columns.section
					.column.is-8
						.title #{title}
					// TODO line item view
					// .column.is-4.has-text-right
					// 	a.button.is-active
					// 		i.fa.fa-th.title.is-5
					// 	a.button
					// 		i.fa.fa-align-justify.title.is-5
				block content
		block footer
			footer.footer
				.container
					.content.has-text-centered
						p
							strong Followbud
							|  made with love by 
							a(href='https://github.com/vpicone') Vince Picone
							| . The source code is licensed 
							a(href='http://opensource.org/licenses/mit-license.php') MIT
							| . The website content
							|           is licensed 
							a(href='http://creativecommons.org/licenses/by-nc-sa/4.0/') CC ANS 4.0
							| .
						p
							a.icon(href='https://github.com/vpicone')
								i.fa.fa-github
		script(type='text/javascript', src='/javascripts/bulma.js')
			block scripts
			
			
			
			
			
			
